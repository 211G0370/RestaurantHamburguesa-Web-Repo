@{
    Layout = "LayoutWaiters";
}


<main class="orders-container">
    <!-- Mesa 1 -->
    <div class="order-card">
        <div class="table-header">
            <div class="table-info">
                <div class="table-main-info">
                    <h2>Mesa 1</h2>
                    <span class="ticket-number">Ticket #1001</span>
                </div>
                <div class="order-status preparing">
                    <span class="status-badge">
                        <i class="fas fa-fire"></i>
                        Preparando
                    </span>
                </div>
            </div>
        </div>
        <div class="order-items">
            <div class="order-item">
                <div class="item-info">
                    <span class="item-quantity">2x</span>
                    <span class="item-name">Hamburguesa Clásica</span>
                </div>
            </div>
            <div class="order-item">
                <div class="item-info">
                    <span class="item-quantity">1x</span>
                    <span class="item-name">Papas Supremas</span>
                </div>
            </div>
            <div class="order-item">
                <div class="item-info">
                    <span class="item-quantity">3x</span>
                    <span class="item-name">Refresco</span>
                </div>
            </div>
        </div>
        <div class="order-footer">
            <span class="order-time">Ordenado hace 15 min</span>
        </div>
    </div>

    <!-- Mesa 4 -->
    <div class="order-card">
        <div class="table-header">
            <div class="table-info">
                <div class="table-main-info">
                    <h2>Mesa 4</h2>
                    <span class="ticket-number">Ticket #1002</span>
                </div>
                <div class="order-status ready">
                    <span class="status-badge">
                        <i class="fas fa-check"></i>
                        Listo
                    </span>
                </div>
            </div>
        </div>
        <div class="order-items">
            <div class="order-item">
                <div class="item-info">
                    <span class="item-quantity">1x</span>
                    <span class="item-name">Hamburguesa Especial</span>
                </div>
            </div>
            <div class="order-item">
                <div class="item-info">
                    <span class="item-quantity">2x</span>
                    <span class="item-name">Papas Regulares</span>
                </div>
            </div>
        </div>
        <div class="order-footer">
            <span class="order-time">Ordenado hace 5 min</span>
        </div>
    </div>
</main>